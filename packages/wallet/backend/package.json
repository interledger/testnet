{
  "name": "@wallet/backend",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "build:deps": "pnpm --filter @shared/backend build && pnpm --filter @wallet/shared build",
    "build": "pnpm build:deps && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "nodemon --watch ./src --watch ../shared/src --ext ts,json --delay 1 --exec \"pnpm run build && node ./dist/index.js\"",
    "test": "jest --passWithNoTests --maxWorkers=75%",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "@sendgrid/mail": "^8.1.4",
    "@shared/backend": "workspace:*",
    "@wallet/shared": "workspace:*",
    "awilix": "^12.0.4",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "disposable-email-domains": "^1.0.62",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "graphql": "^16.9.0",
    "graphql-request": "^6.1.0",
    "hash-wasm": "^4.12.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.2",
    "iron-session": "^8.0.4",
    "json-canonicalize": "^1.0.6",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "node-cache": "^5.1.2",
    "objection": "^3.1.5",
    "pg": "^8.13.3",
    "randexp": "^0.5.3",
    "rate-limiter-flexible": "^5.0.5",
    "socket.io": "^4.8.1",
    "stripe": "17.4.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.1",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.0",
    "@types/cors": "^2.8.18",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.16.2",
    "testcontainers": "^10.18.0",
    "ts-jest": "^29.2.6",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.2"
  }
}
